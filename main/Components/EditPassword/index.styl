.root
  width 100%
  height 100%
  z-index 1500
  +web()
    background black
    opacity 0.7
    position fixed


.content
  background #ffffff
  margin auto
  padding gutter(xxl)
  z-index 2500
  +native()
    width 100%
    height 100%


.input
  width 100%
  border 1px solid black
  height 35px
  padding-left gutter(m)
  border-radius 2px
  margin-bottom gutter(l)

.buttons
  width 100%
  display flex
  flex-direction row
  justify-content space-between

.text
  margin-bottom gutter(m)